FROM debian:latest
WORKDIR html
RUN apt-get update
RUN	apt-get install -y wget curl vim apache2 php bash
RUN apt install -y libapache2-mod-php php-cli php-mysql

RUN echo -e \
    "<IfModule mod_dir.c>\n \
    DirectoryIndex index.php index.html index.cgi index.pl index.xhtml index.htm\n \
    </IfModule>\n" >> /etc/apache2/mods-enabled/dir.conf
RUN echo "ServerName localhost"  >> /etc/apache2/apache2.conf

RUN a2enmod php5

COPY . .
EXPOSE 80
# Run Apache server in foreground. Required.
CMD apachectl -D FOREGROUND
